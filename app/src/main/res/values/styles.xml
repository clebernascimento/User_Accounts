<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
        <item name="android:background">@drawable/layout_search</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:inputType">text</item>
        <item name="android:queryHint">Pesquisar login</item>
    </style>

    <style name="style_error">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blue_xd</item>
    </style>

    <style name="style_fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:layout_margin">@dimen/_16sdp</item>
        <item name="android:background">#076481</item>
    </style>

    <style name="text_account_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/white_xd</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="text_account_user">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/white_xd</item>
    </style>

    <style name="text_account_pass">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/white_xd</item>
    </style>

    <style name="text_account_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/white_xd</item>
    </style>

    <style name="input_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:background">@drawable/layout_edit</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="input_user">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:background">@drawable/layout_edit</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="input_pass">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:background">@drawable/layout_edit</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="input_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:background">@drawable/layout_edit</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="bt_account">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:background">@color/green_xd</item>
        <item name="android:textColor">@color/white_xd</item>
    </style>

    <style name="bt_delete">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:background">@android:color/holo_red_dark</item>
        <item name="android:textColor">@color/white_xd</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>